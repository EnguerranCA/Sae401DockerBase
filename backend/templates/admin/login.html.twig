{% extends 'base.html.twig' %}

{% block title %}Connexion Administrateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            font-family: 'Poppins', sans-serif;
        }
        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
        }
        .login-card {
            background: white;
            padding: 2rem;
            border-radius: 0.5rem;
            overflow: shown;
        }
        .login-logo {
            text-align: center;
            margin-bottom: 2rem;
        }
        .login-logo img {
            max-width: 50px;
        }
        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
            border: 1px solid #e2e8f0;
            border-radius: 0.375rem;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }
        .form-group.focused {
            border-color: #ff8000;
        }
        .form-group label {
            position: absolute;
            left: 0.5rem;
            top: 0.25rem;
            font-size: 0.75rem;
            font-weight: bold;
            color: #ff8000;
        }
        .form-control {
            width: 90%;
            padding: 0.5rem 0.75rem;
            padding-top: 1.5rem;
            border: none;
            outline: none;
            background-color: transparent;
        }
        .form-control:focus {
            outline: none;
        }
        .btn-login {
            background-color: #ff8000;
            color: white;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            width: 100%;
            border: none;
            border-radius: 0.375rem;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        .btn-login:hover {
            background-color: #ff8000;
        }
        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: 0.75rem 1.25rem;
            margin-bottom: 1rem;
            border-radius: 0.375rem;
        }
        .text-primary {
            color: #ff8000;
        }
        .text-center {
            text-align: center;
        }
        .mt-4 {
            margin-top: 1rem;
        }
        .form-check {
            margin-bottom: 1rem;
            border: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-page">
        <div class="login-container">
            <div class="login-card">
                <div class="login-logo">
                    <img src="{{ asset('images/Logo.svg') }}" alt="Logo">
                </div>
                
                <h1 class="text-2xl font-bold mb-6 text-center text-primary">Connexion Administrateur</h1>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="form-group">
                        <label for="inputUsername">Nom d'utilisateur</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="_password" id="inputPassword" class="form-control" required>
                    </div>

                    <div class="form-group form-check">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>
                    </div>

                    <button class="btn-login" type="submit">
                        Se connecter
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.querySelectorAll('.form-group input').forEach(input => {
            input.addEventListener('focus', () => {
                input.parentElement.classList.add('focused');
            });
            input.addEventListener('blur', () => {
                if (!input.value) {
                    input.parentElement.classList.remove('focused');
                }
            });
        });
    </script>
{% endblock %} 